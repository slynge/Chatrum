include includes/header
body#login-or-createAccount
    mixin form(path, operation)
        .wrapper
            form(action = path, method = "POST") 
                h1= operation
                .input-box
                    input(type = "text", name = "username", placeholder = "Username", required)
                    i(class = "bx bxs-user")
                .input-box
                    input(type = "text", name = "password", placeholder = "Password")
                    i(class = "bx bxs-lock-alt")
                input(type = "submit", value = operation, class = "submit-btn")
            if block 
                block

    mixin successfulAccountCreation()
